page{
    background: #f8f8f8;
}

.contBox {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    background: #ffffff;
}
.home-content-header {
    width: 100%;
    padding: 45rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
.addresName{
    width: 500rpx;
}
.icon_GPS_2 {
    width: 22rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.home-content-search {
    width: 100%;
    height: 60rpx;
    border-radius: 50rpx;
    background: #f0f0f0;
    position: relative;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #8f8f8f;
}
.home-content-search .icon_search {
    width: 40rpx;
    height: 40rpx;
    padding: 0 15rpx;
}
.picker {
    max-width: 250rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.home-swiper {
    width: 100%;
    height: 278rpx;
}

.home-swiper image {
    width: 100%;
    height: 100%;
} 
.location_icon{
    width: 30rpx;
    height: 30rpx;
}
.location_icon_A{
    width: 45rpx;
    height: 45rpx;
}

.padding20{
    padding: 10rpx 0 30rpx 0;
}

.nearbyaddres{
    border-bottom: 1rpx solid #e2e2e2;
}
.sug_info{
    padding-bottom: 30rpx;
}
