<!--page/order/pages/otherDetails/otherDetails.wxml-->
<view class='container'>
    <!-- 订单进度 -->
    <view class='status_box padding30'>
        <view class='width90 status_box_content'>
            <view class='status_box_item dpfC'>
                <view class='status_box_item_icon {{progressArr[0].flag ? "borderActive":""}}'></view>
                <view class='fontSize-24 color3 {{progressArr[0].flag ? "color5":""}}'>派单中</view>
            </view>
            <view class='soliders'></view>
            <view class='status_box_item dpfC'>
                <view class='status_box_item_icon {{progressArr[1].flag ? "borderActive":""}}'></view>
                <view class='fontSize-24 color3 {{progressArr[1].flag ? "color5":""}}'>已结单</view>
            </view>
        <view class='soliders'></view>
            <view class='status_box_item dpfC'>
                <view class='status_box_item_icon {{progressArr[2].flag ? "borderActive":""}}'></view>
                <view class='fontSize-24 color3 {{progressArr[2].flag ? "color5":""}}'>服务中</view>
            </view>
            <view class='soliders'></view>
            <view class='status_box_item dpfC'>
                <view class='status_box_item_icon {{progressArr[3].flag ? "borderActive":""}}'></view>
                <view class='fontSize-24 color3 {{progressArr[3].flag ? "color5":""}}'>已完成</view>
            </view>
        </view>
    </view>
    <!-- 地址 -->
    <view class='addresContent dpfC'>
         <view style='width:90%' class='dpfC' bindtap='goAddress'>
            <view style='width:100%' class='dpfb'>
                <view class='dpf fontWeight5 fontSize-32 color1'>
                    <image class='icon_GPS' style='margin-right:10rpx' src='../../../../images/icon/icon_GPS.png'></image> 芍药居甲4号院子
                </view>
            </view>
            <view  class='address_info fontSize-24 color1' style='width:90%;margin-top:15rpx'>
                <text class='marginRight'>张起灵</text>
                <text>1551515121212</text>
            </view>
        </view>
    </view>
    <!-- 订单费用 -->
    <view class='othermoney width100 dpfC'>
        <view class='width90'>
            <view class='width100 dpfb' style='padding-top:30rpx'>
                <view class='dpf'>
                      <image class='icon_common2' src='../../../../images/icon/icon_common2.png'></image>
                        <text style='margin:0rpx 10rpx' class='fontSize-30 color3'>大众工匠</text>
                        <image class='icon_right' src='../../../../images/icon/icon_right.png'></image>   
                </view>
                <view class='fontSize-24 color3'>2019-05-02</view>
            </view>
            <import src="../../../../common/othertemp/othertemp.wxml"></import>
            <template is="othertemp" data></template>
            <view class='dpfb fontSize-30 color1'>
                <view>优惠卷</view>
                <view>-10.00元</view>
            </view>
            <view style='border-bottom:1rpx solid #e0e0e0' class='dpfb fontSize-30 color1 padding30'>
                <view>上门费</view>
                <view>5.00元</view>
            </view>
            <view class='dpfb fontSize-30 color1 padding30'>
                <view>待付款</view>
                <view class='color4'>19.00元</view>
            </view>
        </view>
    </view>
    <!-- 订单信息 -->
    <view class='otherDetails width100 dpfC'>
        <view class='width90'>
            <view class='width100 dpfb padding30 fontSize-32 color1 fontWeight5'>
                订单详情
            </view>
            <view class='width100 dpfb fontSize-32' style='margin-bottom:30rpx'>
                <view class='color3'>订单编号</view>
                <view class='color1'>5185843697742124854</view>
            </view>
            <view class='width100 dpfb fontSize-32' style='margin-bottom:30rpx'>
                <view class='color3'>预约时间</view>
                <view class='color1'>2018-11-05(明天) 12:00</view>
            </view>
            <view class='width100 dpfb fontSize-32' style='margin-bottom:30rpx'>
                <view class='color3'>预约备注</view>
                <view class='color1'>带好齐全的工具，顺带给杀一下蟑螂</view>
            </view>
        </view>
    </view>
</view>
<view style='height:120rpx'></view>
<!-- 底部定位 -->
 <view class='otherFootFd'>
    <view style='width:95%;' class='otherFootFd_Box'>
        <view class='btn_1'>取消订单</view>
        <view class='btn_2'>联系客服</view>
        <view class='btn_2' bindtap='goEvaluate'>评价</view>
    </view>
    <view class='isIphoneXBox' wx:if='{{isIphoneX}}'></view>
</view>
