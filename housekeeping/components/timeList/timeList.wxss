.timer_content{
    width: 100%;
    min-height: 100vh;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.timer_content_day{
    width: 100%;
    padding: 27rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    box-shadow:0 10rpx 20rpx #eee;
}
.timer_content_day view:nth-child(1){
    margin-left: 30rpx;
}
.timer_content_day view{
    display: inline-block;
    margin-right: 53rpx;
}
.timer_content_day text{
    display: block;
}
.timer_content_day_item{
    text-align: center;
}
.timer_content_day_item>text:nth-child(1){
    font-size: 32rpx;
    color: #333333;
}
.timer_content_day_item>text:nth-child(2){
    font-size: 22rpx;
    color: #999999;
}

.timer_content_text{
    width: 90%;
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #999999;
    margin-top: 30rpx;
}
.timer_content_text image{
    width: 28rpx;
    height: 28rpx;
    margin-right: 20rpx;
}
.timer_content_sub{
    width: 90%;
    margin-top: 108rpx;
}
.btnStyle{
    width: 100%;
    height: 98rpx;
    text-align: center;
    line-height: 98rpx;
    background: #5994F7;
    color: #ffffff;
    font-size: 34rpx;
    border-radius: 5rpx;
}
.timer_content_time{
    width: 90%;
    min-height: 600rpx;
    margin-top: 30rpx;
    border: 1rpx solid #e2e2e2;
     display: flex;
    flex-wrap: wrap;
}

.timer_content_time .timer_content_time_item{
    width: 24.7%;
    height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content:center;
    border-bottom: 1rpx solid #e2e2e2;
    border-right: 1rpx solid #e2e2e2;
}
.timer_content_time view:nth-child(4n){
    border-right: none!important;
}
.timer_content_time view:nth-child(n+21){
    border-bottom: none!important;
}
.time{
    font-size: 28rpx;
    color: #333333;
}
.colors{
    color: #cecece;
}
.time_status{
    font-size: 26rpx;
}

.checkedClass{
    background: #6297f3!important;
    color: #ffffff!important;
}