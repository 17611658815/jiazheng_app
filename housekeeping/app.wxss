page {
    border-top: 1rpx solid #e2e2e2;
}

.container {
    height: 100%;
    display: flex;
    min-height: 100vh;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.dpfC {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.dpf {
    display: flex;
    align-items: center;
}

.dpfbetween {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.fontSize-32 {
    font-size: 32rpx;
}

.fontSize-30 {
    font-size: 30rpx;
}

