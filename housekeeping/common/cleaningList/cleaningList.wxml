<template name="cleaningList">
    <view class='cleaningList'>
        <view class='cleaningList-item' bindtap='gocleaningDetails' data-id='{{index}}' wx:for="{{cleaningArr}}" wx:key='key'>
            <view class='cleaningList-item-photo'>
                <image src='http://i2.chuimg.com/f30f7ea4346c11e7947d0242ac110002_3264w_2448h.jpg?imageView2/2/w/620/interlace/1/q/90'></image>
            </view>
            <view class='cleaningList-item-text'>
                <view class='cleaningList-item-title fontSize-32 color1'>日常保洁</view>
                <view class='cleaningList-item-time color4 fontSize-32'>
                    <text style='font-weight:500'>24</text>元/小时</view>
                <view class='cleaningList-item-hot fontSize-22 color3' wx:if='{{show}}'>
                    <text>已售2341</text>
                    <text>好评97%</text>
                </view>
                <view class='cleaningList-item-bottom'  wx:if='{{show}}'>
                    <view class='cleaningList-item-icon'>
                        <image src='../../../../images/icon/icon_common2.png'></image>
                    </view>
                    <view class='cleaningList-item-type fontSize-22 color3'> 大众工匠
                        <image class='icon_right' src='../../../../images/icon/icon_right.png'></image>
                    </view>
                </view>
            </view>
        </view>
    </view>
</template>